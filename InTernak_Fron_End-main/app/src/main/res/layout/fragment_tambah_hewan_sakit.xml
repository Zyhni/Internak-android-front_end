<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Fragment.TambahHewanSakitFragment">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2A6538"
        android:padding="12dp"
        android:text="Tambah Tentang"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usia_hewan_label2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hewan Id"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0"/>

    <Spinner
        android:id="@+id/hewanid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_texsbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usia_hewan_label2"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/nama_hewan_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Keluhan"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hewanid"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0"/>

    <EditText
        android:id="@+id/keluhanid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_texsbox"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama_hewan_label"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/usia_hewan_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Periode"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keluhanid"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0"/>

    <Spinner
        android:id="@+id/PeriodeId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_texsbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usia_hewan_label"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/berat_hewan_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Deskripsi"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PeriodeId"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0"/>

    <EditText
        android:id="@+id/DeskripsiId"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/border_texsbox"
        android:inputType="textMultiLine"
        android:minLines="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/berat_hewan_label"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Simpan Hewan"
        android:backgroundTint="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DeskripsiId"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>
