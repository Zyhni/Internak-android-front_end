<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Fragment.TambahHewanFragment">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2A6538"
        android:padding="12dp"
        android:text="Tambah Hewan"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usia_hewan_label2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kandang Id"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0"/>

    <Spinner
        android:id="@+id/kandangid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_texsbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usia_hewan_label2"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- Nama Hewan Label -->
    <TextView
        android:id="@+id/nama_hewan_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama Hewan"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kandangid"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- Nama Hewan -->
    <EditText
        android:id="@+id/nama_hewan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_texsbox"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama_hewan_label"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- Usia Hewan Label -->
    <TextView
        android:id="@+id/usia_hewan_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Usia Hewan"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama_hewan"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- Usia Hewan -->
    <EditText
        android:id="@+id/usia_hewan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_texsbox"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usia_hewan_label"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- Berat Hewan Label -->
    <TextView
        android:id="@+id/berat_hewan_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Berat Hewan"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usia_hewan"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- Berat Hewan -->
    <EditText
        android:id="@+id/berat_hewan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_texsbox"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/berat_hewan_label"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- Tanggal Masuk Hewan Label -->
    <TextView
        android:id="@+id/tanggal_masuk_hewan_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tanggal Masuk Hewan"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/berat_hewan"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- Tanggal Masuk Hewan -->
    <EditText
        android:id="@+id/tanggal_masuk_hewan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_texsbox"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tanggal_masuk_hewan_label"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- Calendar Icon -->
    <ImageView
        android:id="@+id/calendar_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/calender_icon"
        app:layout_constraintEnd_toEndOf="@+id/tanggal_masuk_hewan"
        app:layout_constraintTop_toTopOf="@+id/tanggal_masuk_hewan"
        app:layout_constraintBottom_toBottomOf="@+id/tanggal_masuk_hewan"
        android:layout_marginEnd="8dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/save_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Simpan Hewan"
        android:backgroundTint="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tanggal_masuk_hewan"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>
